{
  "manifest_version": 3,
  "name": "Copy Highlighted Links",
  "version": "1.0",
  "description": "Copy URLs from highlighted (selected) links",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Copy Highlighted Links"
  },
  "background": {
    "service_worker": "background.js"
  }
}
